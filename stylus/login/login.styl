$orange=#ed692b

*
    outline none
    padding 0
    margin 0
body
    background-color #efefef
.header
    height 44px
    background-color #fff
    line-height 44px
.icon-back
    position absolute
    top 0
    left 0
    display inline-block
    width 44px
    height 44px
    background url("../../img/nav_back_icon@2x.png") no-repeat center
    background-size 12px 18px
.header-title
    display inline-block
    width 100%
    color $orange
    text-align center
.form-list
    width 100%
    margin-top 22px
    background #fff
.identity_cells
    position absolute
    right 10px
    top 255px
    border-radius 6px
    background-color #a3a3a3
    text-align center
    color #fff
    font-size 14px
    z-index 50
    .identity_cell
        width 64px
        height 30px
        line-height 30px
    .identity_under
        border-bottom 1px solid #fff
.form-cell
    position relative
    display flex
    height 40px
    line-height 40px
    &:after
        content ''
        position absolute
        bottom -1px
        left 10px
        z-index 5
        display block
        height 1px
        width 95%
        background-color #efefef

.form-cell-name
    display inline-block
    width 50px
    padding-left 40px
    background url("../../img/content_ID_icon@2x.png") no-repeat left 10px center
    background-size 24% 50%
.btn_code
    width 6rem
&.cell-code
    width 65px
    background url("../../img/content_verify_icon@2x.png") no-repeat left 14px center
    background-size 15% 50%
&.cell-passwd
    background url("../../img/content_password_icon@2x.png") no-repeat left 11px center
    background-size 20% 50%

&.cell-status
    background url("../../img/content_position_icon@2x.png") no-repeat left 10px center
    background-size 24% 50%
.form-cell-input
    flex 1
    border none
.cell-per
    position absolute
    top 5px
    right 15px
    &:after
        content ''
        display block
        width 16px
        height 30px
        background url("../../img/content_icon02_nor@2x.png") no-repeat right center
        background-size 80%
.btn_pin
    width 85px
    height 28px
    margin 0
    padding 0
    border none
    line-height 25px
    font-size 13px
    background $orange
    border-radius 5px
    color #fff
    margin-right 10px
    margin-top 6px
.btn_get
    width 85px
    height 28px
    margin 0
    padding 0 6px
    border none
    line-height 25px
    font-size 13px
    background #c7c7c7
    border-radius 5px
    color #fff
    margin-right 10px
    margin-top 6px
.fci-input
    height 38px
    margin 0
    padding 0
    border none
.btn_code
    width 6.8rem
    height 14px
    margin-top 9px
    padding 4px 6px
    border-radius 5px
    background-color $orange
    color #fff
    font-size 14px
    line-height 14px


.fic-box
    display flex
.input-box
    display block
    flex 1

.bt_box
    display flex
    height 40px
    margin-top 45px
    padding 0 15px
    .btn_login
        display block
        width 100%
        height 40px
        border none
        border-radius 5px
        background-color #c7c7c7
        color #fff
        font-size 1.1rem
        line-height 40px
    .btn_agent
        display block
        width 100%
        height 40px
        border none
        border-radius 5px
        background-color $orange
        color #fff
        font-size 1.1rem
        line-height 40px
    .btn_reg
        font-size 13px
        margin 0 auto
        span
            text-decoration underline
            color $orange
button.submit
    background-color $orange
    color #fff
.bt-reg
    padding-left 10px
    color $orange
    flex 1
.bt-passwd
    padding-right 10px
    color #646464
.must
    font-size 15px
    padding 10px
    color #b4b4b4
.agent-form
    width 100%
    background #fff
    .add-header
        padding-top 10px
        height 75px
        width 129px
        margin 0 auto
        text-align center
        border-bottom 1px solid #e1e1e1
        margin-bottom 10px
        .agent-header
            width 65px
            height 65px
            margin 0 auto
            border-radius 50%
            background-color #878787
            font-size 13px
            color #fff
            line-height 65px
    .agent-input
        height 170px
        width 232px
        margin 0 auto
        input
            height 30px
            width 230px
            background-color #efeff4
            margin-bottom 10px
            border-radius 5px
            border 1px solid #e1e1e1
    .image-block
        padding-bottom 10px
        div
            width 100px
            height 65px
            margin 0 auto
            border-radius 5px
            background #878787
            color #f8f8f8
            text-align center
            line-height 65px
            font-size 13px
    .sub-input
        height 85px
        width 232px
        margin 0 auto
        input
            height 30px
            width 230px
            background-color #efeff4
            margin-bottom 10px
            border-radius 5px
            border 1px solid #e1e1e1
.agent-cell
    width 100%
    background #fff
    .agent-cell-input
        height 50px
        width 232px
        margin 0 auto
        input
            height 30px
            width 230px
            background-color #efeff4
            margin-bottom 10px
            border-radius 5px
            border 1px solid #e1e1e1
            margin-top 10px
    .image-block
        display flex
        div
            flex 1
            margin 10px 10px
            width 100%
            height 65px
            border-radius 5px
            background #878787
            color #f8f8f8
            text-align center
            line-height 65px
            font-size 13px
            margin-bottom 10px
.broker-cell
    width 100%
    background #fff
    padding 10px 0
    .image-block
        div
             width 100px
             height 65px
             margin 0 auto
             border-radius 5px
             background #878787
             color #f8f8f8
             text-align center
             line-height 65px
             font-size 13px
.finish_cover
    width 100%
    height 100%
    background #000
    opacity 0.2
    z-index 5
    position absolute
.finish_banner
    border none
    height 110px
    width 272px
    background-color #fff
    z-index 10
    position absolute
    top 50%
    margin-top -55px
    left 50%
    margin-left -136px
    border-radius 15px
    text-align center
    .finish_msg
        width 100%
        height 63px
        line-height 63px
        color #323232
        border-bottom 1px solid #d6d7dc
        font-size 14px
    .finish_ok
        color $orange
        font-weight bold
        line-height 46px


