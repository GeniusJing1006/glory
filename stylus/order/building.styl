body
    background-color #efeff4
.header
    width 100%
    z-index 10
    color #fff
    background url("../../img/banner_img_shadow@2x.png") no-repeat center
    background-size 100%
    position absolute
    .icon-back
        padding-left 30px
        background url("../../img/nav_back_icon_building@2x.png") no-repeat center 
        background-size 11px 20px
        line-height 50px
        font-style normal
    .icon_share
        padding 10px 15px
        background url("../../img/nav_share_icon@2x.png") no-repeat center
        background-size 21px 19px
        position absolute
        right 60px
        top 50%
        margin-top -12px
    .icon_collect
        padding 10px 15px
        background url("../../img/nav_collect_nor_icon@2x.png") no-repeat center
        background-size 21px 19px
        position absolute
        right 15px
        top 50%
        margin-top -12px
.building_info
    width 100%
    height 365px
    position relative
    z-index -1
    .building_img
        width 100%
        height 365px
        background url("../../img/building_img@2x.png") no-repeat center
        background-size 100% 365px
        display flex
        .build_price
            flex 1
            position absolute
            bottom 15px
            color #fff
            padding-left 12px
            .state
                padding-bottom 6px
                font-size 15px
            .price
                font-size 17px
                .number
                    font-size 24px
                    color #ea5404
        .build_num
            flex 1
            position absolute
            bottom 15px
            color #fff
            right 15px
            .list
                font-size 24px
.banner
    width 100%
    height 115px
    background-color #fff
    border-bottom 1px solid #d6d7dc
    .banner_left
        display flex    
        border-bottom 1px solid #d6d7dc
        .build_address
            flex 2.5
            height 79px
            padding-left 15px
            color #646464
            position relative
            &:after
                content ''
                width 1px
                height 55px
                background-color #e1e1e1
                position absolute
                right 0
                top 12px
            .build_name
                color #323232
                font-size 18px
                margin-top 8px
                margin-bottom 5px
            .build_add
                font-size 16px
                margin-bottom 5px
        .build_area
            flex 1
            height 79px
            color #b4b4b4
            text-align center
            line-height 110px
            background url("../../img/content_icon_map@2x.png") no-repeat top 20px center
            background-size 20px 25px
    .house_area
        padding-left 15px
        line-height 36px
        color #646464
.house_cells
    width 100%
    background-color #fff
    margin-top 10px
    .build_cells
        width 100%
        list-style none
        padding 0
        margin 0
        .build_cell
            width 100%
            height 55px
            display flex
            position relative
         li:nth-child(odd)
                background-color #efeff4
            .house_img
                width 75px
                height 50px
                margin-top 3px
                margin-left 15px
                background url("../../img/content_img_home01@2x.png") no-repeat left
                background-size 75px 50px
                flex 1
                .cover
                    width 75px
                    height 50px
                    color #fff
                    line-height 50px
                    text-align center
                    background-color rgba(0,0,0,0.8)
            .house_type
                flex 0.8
                padding-left 5px
                margin-right 0
                font-size 14px
                margin-top 5px
            .house_price
                flex 1
                line-height 55px
                position relative
                font-size 14px
                overflow auto
                white-space nowrap
                &:after
                    content ''
                    width 1px
                    height 33px
                    background-color #e1e1e1
                    position absolute
                    right 0
                    top 10px
                .money
                    color #ea5404
            .house_order
                flex 1
                line-height 55px
                text-align center
                color #646464
            .house_more
                width 85px
                height 25px
                position absolute
                background-color #efeff4
                border 1px solid #e1e1e1
                margin-top 15px
                left 50%
                margin-left -42px
                border-radius 5px
.house_title
    width 100%
    height 32px
    line-height 32px
    text-align center
    position relative
    color #494949
    .icon_left
        width 10px
        height 10px
        border-radius 50%
        background-color #b4b4b4
        position absolute
        top 11px
        left 36%
    .icon_right
        width 10px
        height 10px
        border-radius 50%
        background-color #b4b4b4
        position absolute
        top 11px
        right 36%
.house_info
    background #fff
    width 100%
    margin-top 10px
    font-size 14px
    border-bottom 1px solid #d6d7dc
    .info_cell
        height 25px
        line-height 25px
        position relative
        .info_left
            color #646464
            text-align right
            width 80px
            display inline-block
        .info_right 
            color #494949
            display inline-block
            position absolute
            left 80px
            right 15px
            border-bottom 1px solid #e1e1e1
            overflow auto
            white-space nowrap
    .house_msg
        width 100%
        margin-top 18px
        .house_pic
            width 100%
            height 190px
            background url("../../img/content_img_home02@2x.png") no-repeat center
            background-size 90% 190px
        .house_intro
            margin 0 15px
            color #646464
        .house_top
            margin-top 15px
        .house_bottom
            padding-bottom 20px
.house_around
    width 100%
    margin-bottom 15px
    .around_cell
        margin 0 15px
        background #fff
        height 266px
        color #323232
        padding-top 15px
        .around_img
            width 100%
            height 190px
            background url("../../img/content_img_home03@2x.png") no-repeat center
            background-size 90% 190px
        .around_title
            margin-top 15px
            margin-left 15px
        .around_price
            margin-left 15px
            margin-top 5px
            font-size 14px
            .money
                font-size 20px
                color #ea5404