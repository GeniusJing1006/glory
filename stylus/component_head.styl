body
    background-color #efeff4
.cover
    width 100%
    height 100%
    background rgba(0,0,0,0.3)
    position fixed
    z-index 10
    display none
.header
    display flex
    height 50px
    background-color #fff
    border-bottom 1px solid #d6d7dc
    .icon-back
        display block
        width 50px
        height 50px
        background url("../../img/nav_back_icon@2x.png") no-repeat center
        background-size 25%
    .header_title
        flex 1
        padding-right 50px
        line-height 50px
        text-align center
    .title_center
        padding-right 0
    .header_cancle
        line-height 50px
        margin-left 12px
    .header_sure
        line-height 50px
        margin-right 15px
        color #ea5404
.order_out
    width 270px
    height 109px
    background-color #fff
    border-radius 15px
    z-index 15
    position fixed
    left 50%
    margin-left -135px
    top 50%
    margin-top -100px
    display none
    .make_msg
        height 64px
        width 100%
        line-height 64px
        text-align center
        border-bottom 1px solid #d6d7dc
        color #323232
        font-size 14px
    .make_sure
        text-align center
        height 44px
        line-height 44px
        color #ea5404
    .order_choose
        width 100%
        height 44px
        line-height 44px
        display flex
        text-align center
        .order_no
            flex 1
            color #646464
            border-right 1px solid #d6d7dc
        .order_sure
            flex 1
            color #ea5404

