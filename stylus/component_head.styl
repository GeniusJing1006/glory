body
    background-color #efeff4
.cover
    position absolute
    width 100%
    height 100%
    background rgba(0,0,0,0.2)
    z-index 10
.header
    display flex
    height 50px
    background-color #fff
    border-bottom 1px solid #d6d7dc
    .icon-back
        display block
        width 50px
        height 50px
        background url("../../img/nav_back_icon@2x.png") no-repeat center
        background-size 25%
    .header_title
        flex 1
        padding-right 50px
        line-height 50px
        text-align center
    .title_center
        padding-right 0
    .header_cancle
        line-height 50px
        margin-left 12px
    .header_sure
        line-height 50px
        margin-right 15px
        color #ea5404