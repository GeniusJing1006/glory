@import '../component_head.styl'


.radio_box
    padding-left 10px
    padding-bottom 10px
.radio_banner
    padding-left 30px
    border-bottom 1px solid #d6d7dc
    .radio_choose
        font-size 13px
        padding 8px 0
.radio_block
    font-size 13px
    display inline-block
    height 24px
    line-height 15px
    padding-left 10px
    .radio_btn
        display inline-block
        width 6px
        height 6px
        margin 4px
        border 1px solid #ea5404
        border-radius 50%
        vertical-align bottom
    &.selected
        .icon
            display inline-block
            width 2px
            height 2px
            margin 1px
            border 1px solid transparent
            background-color #ea5404
            border-radius 50%
.radio_res
    padding 0
    margin-left -10px
    color #646464

.select_box
    width 80%
    position relative
    .select-title
        position relative
        border 1px solid #cecece
        border-radius 5px
        height 40px
        padding 0 10px
        background-color #efefef
        line-height 35px
        &:before
        &:after
            content ''
            position absolute
            top 14px
            right 23px
            display block
            width 2px
            height 12px
            background-color #ababab
            transform rotate(-45deg)
        &:after
            right 15px
            transform rotate(45deg)
    .select-list
        
        position absolute
        top 38px
        right 0
        left 0
        z-index 5
        border 1px solid #cecece
        background-color #efefef
        list-style none
        margin 0
        padding 0
        border-radius 0 0 5px 5px
        .select-li
            position relative
            height 40px
            padding 0 10px
            line-height 40px
            &:after
                content ''
                display block
                height 1px
                background-color #cecece
                position absolute
                bottom 0
                left 10px
                right 0
            &:last-child:after
                display none
.search_box
    width 100%
    height 46px
    display flex
    padding-top 12px
    line-height 33px
    font-size 14px
    position relative
    .search_input
        flex 1.8
        height 33px
        border 1px solid #d6d7dc
        border-radius 0 5px 5px 0
        color #b4b4b4
        background-color #fff
        border-left 0
        color #323232
    .icon-search
        display inline-block
        width 30px
        height 35px
        background #fff url("../../img/nav_icon_search@2x.png") no-repeat center
        background-size 16px
        border-radius 5px 0 0 5px
        border 1px solid #d6d7dc
        border-right 0
        margin-left 12px
    .search_close
        width 18px
        height 35px
        background url("../../img/content_delet_icon@2x.png") no-repeat center
        background-size 16px
        position absolute
        right 35%
        display none
    .house_add
        flex 1
        color #323232
        text-align center
        position relative
        white-space nowrap
        overflow auto
        &:before
            content ''
            width 15px
            height 1px
            display block
            position absolute
            top 50%
            margin-top -7px
            left 50%
            margin-left -47px
            background-color #b5b5b5
        &:after
            content ''
            width 1px
            height 15px
            display block
            position absolute
            top 50%
            margin-top -14px
            left 50%
            margin-left -40px
            background-color #b5b5b5
.edifice_info
    width 100%
    color #727272
    background #fff
    border-bottom 1px solid #d6d7dc
    padding-bottom 15px
.edifice_title
    padding-left 25px
    padding-top 12px
    position relative
    .log
        width 6px
        height 6px
        border-radius 50%
        background #bee949
        position absolute
        left 12px
        top 18px
.edifice_msg
    padding 4px 12px
    display flex
    font-size 14px
    .msg_left
        flex 1.5
        white-space nowrap
        overflow hidden
        text-align right
    .msg_right
        flex 5
        display inline-block
        white-space nowrap 
        overflow auto
        border-bottom 1px solid #d6d7dc
        color #b4b4b4
.resource_info
    width 100%
    margin-top 12px
    color #727272
    background-color #fff
    border-bottom 1px solid #d6d7dc
    
    .edifice_title
        .log
            background #49cde9
    .resource_cells
        color #bababa
        font-size 14px
        margin-left 12px
        position relative
        .resource_cell
            margin 6px 0
            white-space nowrap
            overflow hidden
            .cell_info
                float left
                line-height 30px
            .cell_list
                margin 0 14px
                border 1px solid #e1e1e1
                border-radius 3px
                height 30px
                background-color #efeff4
                width 70%
                float left
                white-space nowrap
                overflow hidden
            .cell_short
                margin 0 14px
                border 1px solid #e1e1e1
                border-radius 3px
                height 30px
                background-color #efeff4
                width 33%
            .cell_long
                margin 0 14px
                border 1px solid #e1e1e1
                border-radius 3px
                height 30px
                background-color #efeff4
                width 70%
            .cell_time
                margin-right 0
                
            .cell_time2
                margin-left 4%
            .res_msg
                margin-top 3px
                display block
                vertical-align top
                float left
            .res_tro
                margin 0 14px
                border 1px solid #e1e1e1
                border-radius 3px
                height 74px
                width 70%
                resize none
                color #bababa
                background-color #efeff4
                
            .res_list
                position relative
                line-height 30px
                text-indent 6px
                
                &:after
                    content ''
                    position absolute
                    width 15px
                    height 15px
                    right 13px
                    top 50%
                    margin-top -8px
                    background url("../../img/content_list_icon07@2x.png") no-repeat center
                    background-size 100%
            .resource_list
                list-style none
                display none
                position absolute
                z-index 20
                border 1px solid #d6d7dc
                margin 0
                padding 0
                background-color #efeff4
                border-radius 0 0 5px 5px
                width 70%
                left 70px
                top 110px
                .resource_li
                    height 40px
                    line-height 40px
                    padding 0 10px
                    color #323232
                    position relative
                    &:after
                        content ''
                        display block
                        height 1px
                        background-color #d6d7dc
                        position absolute
                        bottom 0
                        left 10px
                        right 0
                    &:last-child:after
                        display none
        .res_txt
            color #646464
            sup
                font-size 8px
    .add_house
        width 75px
        height 75px
        background-color #d4d4d9
        text-align center
        margin-top 23px
        margin-left 20px
        margin-bottom 15px
        font-size 13px
        .add_res
            padding-top 20px
            position relative
            .add-img
                width 24px
                height 24px
                display block
                background url(../../img/content_plus_icon@2x.png) no-repeat center
                margin-left 24px
            .file
                position absolute
                top 50%
                left 0
                width 100%
                opacity 0
            
            .res_img
                width 75px
                height 75px
                background url("../../img/banner_img@2x.png") no-repeat center
                background-size 75px 75px
                margin 15px
                position relative
                &:after
                    content ''
                    width 16px
                    height 16px
                    position absolute
                    top -7px
                    background url("../../img/content_img_close_icon@2x.png") no-repeat center
                    background-size 100%
            .res_li
                flex 1
    
   
