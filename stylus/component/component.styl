.radio_block
    display inline-block
    height 24px
    line-height 24px
    .radio_btn
        display inline-block
        width 12px
        height 12px
        margin 4px
        border 2px solid #ff6666
        border-radius 50%
        vertical-align bottom
    &.selected
        .icon
            display inline-block
            width 4px
            height 4px
            margin 2px
            border 2px solid transparent
            background-color #ff6666
            border-radius 50%

.select_box
    width 80%
    position relative
    .select-title
        position relative
        border 1px solid #cecece
        border-radius 5px
        height 40px
        padding 0 10px
        background-color #efefef
        line-height 35px
        &:before
        &:after
            content ''
            position absolute
            top 14px
            right 23px
            display block
            width 2px
            height 12px
            background-color #ababab
            transform rotate(-45deg)
        &:after
            right 15px
            transform rotate(45deg)
    .select-list
        display none
        position absolute
        top 38px
        right 0
        left 0
        z-index 5
        border 1px solid #cecece
        background-color #efefef
        list-style none
        margin 0
        padding 0
        border-radius 0 0 5px 5px
        .select-li
            position relative
            height 40px
            padding 0 10px
            line-height 40px
            &:after
                content ''
                display block
                height 1px
                background-color #cecece
                position absolute
                bottom 0
                left 10px
                right 0
            &:last-child:after
                display none


