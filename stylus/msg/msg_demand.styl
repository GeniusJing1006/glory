$orange = #ed6928
body
    background #efefef
.tab_box
    height 32px
    padding 9px 0
    background-color #fff
    .tab_bar
        color $orange
        display flex
        width 70%
        margin 0 auto
        padding 0
        list-style none
        height 30px
        border-radius 5px
        border 1px solid #ff6666
        .tab_bar-cell
            flex 1
            position relative
            line-height 30px
            text-align center
            &:after
                content ''
                position absolute
                top 0
                right 0
                display block
                width 1px
                height 30px
                background $orange
            &:last-child:after
                content ''
                display none
            &.active
                background-color $orange
                color #fff
            .text-super
                vertical-align super
                font-size 10px
        .info-super
            line-height 20px
.demand_cells
    padding 15px
.demand_cell
    width 100%
    min-height 110px
    border-radius 5px
    box-shadow 0 0 1px 1px #e0e0e0
    background-color #fff
    margin-bottom 10px
    .demand-title
        display flex
        height 30px
        padding 0 10px
        border-bottom 1px dashed #cecece
    
        .d-t-name
            flex 1
            line-height 30px
        .d-t-tag
            display inline-block
            width 45px
            height 16px
            margin 7px 0
            padding 2px 0
            border-radius 5px
            line-height 16px
            text-align center
            font-style normal
            font-size 12px
            color #fff
        .tag1
            background-color #15b755
        .tag2
            background-color #0193e6
        .tag3
            background-color #97b715  
        .tag4
            background-color #ea5404
        .text-time
            font-size 12px
            font-style normal
            text-align right
            color #7f7f7f
            padding-right 6px
            line-height 30px
    .notice-title
        border-bottom 1px solid #cecece                      
    .demand-info
        margin 0
        padding 10px
        line-height 1.2em
        font-size 13px
    .notice-info
        text-indent 1em
        font-size 13.5px
        padding-bottom 0
        color #8b8b8b
    .info-info
        text-indent 1.5em
        font-size 13.5px
        padding-bottom 0
        color #8b8b8b
    .notice-add
        margin 0
        padding 0 10px
        font-size 13.5px
        padding-bottom 10px
        color #8b8b8b
    .demand-footer
        display flex
        height 30px
        line-height 24px
        padding-bottom 5px
        .btn-detail
            width 84px
            height 24px
            text-align center
            background-color #efeff4
            color #646464
            border-radius 5px
            border 1px solid #ececec
            font-size 12px
        .text-time
            flex 1
            font-size 12px
            font-style normal
            text-align right
            color #7f7f7f
            padding-right 10px
.bottom-cells
    width 100%
    height 70px
    background-color #fff
    position fixed
    bottom 0
    margin 0
    padding 0
    list-style none
    display flex
    .bottom-cell
        flex 1
        width 20%
        text-align center
        color #b4b4b4
        position relative
        .bottom-text
            line-height 100px
        .bottom-super
            width 15px
            height 15px
            border-radius 60%
            font-size 10px
            background-color #ec461f
            position absolute
            top 6px
            right 30%
            line-height 15px
            color #fff
            text-align center
    .bottom-index
        background url("../../img/bottom_nor_icon04@2x.png") no-repeat top 10px center
        background-size 30px
    .bottom-pre
        background url("../../img/bottom_nor_icon03@2x.png") no-repeat top 10px center
        background-size 30px
    .bottom-more
        background url("../../img/bottom_icon05@2x.png") no-repeat center
        background-size 90%
    .bottom-info
        background url("../../img/bottom_press_icon02@2x.png") no-repeat top 10px center
        background-size 30px
    .bottom-me
        background url("../../img/bottom_nor_icon01@2x.png") no-repeat top 10px center
        background-size 30px



        