@import "../head.styl"
p
    margin 0
    padding 0
.info-cover
    width 100%
    height 100%
    background rgba(0,0,0,0.3)
    position absolute
    z-index 10
.photo-cells
    z-index 20
    width 100%
    background #fff
    position absolute
    bottom 0
    text-align center
    .photo-cell
        height 44px
        line-height 44px
        position relative
        &:after
            content ''
            position absolute
            left 10px
            z-index 30
            bottom 1px
            display block
            height 1px
            width 95%
            background-color #d6d7dc
    .photo-active
        color #ea5404
        height 44px
        line-height 44px
.info_box
    padding 20px 15px
    background #fff
    div
        margin 10px 0
    .info_img
        width 65px
        height 65px
        margin 0 auto
        background url("../../img/head-img.png") no-repeat center
        background-size 100%
    .info_name
        text-align center
        line-height 24px
        font-size 1.2rem
        color #646464
    .broker-name
        font-size 1.4rem
    .info_desc
        text-align center
        line-height 18px
    .info_edit
        width 6em
        margin 0 auto
        padding 8px 14px
        color #ea5404
        border 1px solid #ea5404
        border-radius 5px
        line-height 30px
.info-cells
    margin-top 11px
    background-color #fff
.info-cell
    display flex
    padding 0 15px
    line-height 40px
    border-bottom 1px solid #e1e1e1
    .info-name
        flex 2.5
        font-size .7em
    .info-content
        flex 4.5
        text-indent 10px
        font-size .7em
    .info-head
        background url("../../img/head-img.png") no-repeat left 10px center
        background-size 14%
.info-after
    position relative
    &:after
        content ''
        position absolute
        top 50%
        right 15px
        margin-top -15px
        display block
        width 16px
        height 30px
        background url("../../img/content_list_right_icon@2x.png") no-repeat right center
        background-size 50%

.image-cell
    display flex
    margin-top 23px
    padding-bottom 10px
    .image-block
        flex 1
        margin 0 11px
        text-align center
        font-size 13px
        color #878787
        div
            margin 0 auto
            width 100%
            height 65px
            border-radius 5px
            background #878787
.over-cell
    display flex
    width 100%
    background #fff
    margin-top 10px
    height 115px
    .overdue-img
        flex 1
        background url("../../img/content_img_list@2x.png") no-repeat left center
        background-size 100%
        margin-left 15px
        margin-top 10px
        margin-bottom 10px
    .overdue-text
        flex 2
        padding-top 10px
    .over-big
        margin 5px 10px
        font-size 20px
        position relative
        .over-right
            position absolute
            right 0
            font-size 13px
            color #979797
    .over-text
        margin 0 10px
        font-size 14px
        color #979797
    .btn-overdue
        border 1px solid #ea5404
        background-color #fff
        border-radius 5px
        color #ea5404
        font-size 12px
        padding 3px 8px
        margin 3px 10px
    .over-bottom
        color #979797
        font-size 13px
        position relative
        margin 0 10px
        .over-money
            color #ea5404
            font-size 16px
        .over-right
            position absolute
            right 0
            font-size 13px
            color #979797
.about_banner
    width 100%
    height 200px
    background #fff url("../../img/content_img_logo@2x.png") no-repeat center
    background-size 20%
            