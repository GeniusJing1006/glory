.header
    position absolute
    top 0
    width 100%
    z-index 5
    color #fff
    background-color transparent
    border-bottom none
    .icon-back
        width 65px
        padding-left 15px
        background transparent url("../../img/nav_back_icon_white@2x.png") no-repeat left 15px center 
        background-size 12px
        line-height 50px
        font-style normal
.slider_box
    width 100%
    height 320px
    overflow hidden
    position absolute
    top -55px
    .slider_container
        width 300%
        transition all .5s
        transform translateX(0)
        &:after
            content ''
            display block
            visibility hidden
            height 0
            clear both
    .house_price
        position absolute
        bottom 30px
        width 100%
        color #fff
        .house_order
            position absolute
            right 15px
            bottom 0px
            .house_big
                font-size 24px
        .house_money
            font-size 13px
            margin-left 15px
            .house_orange
                font-size 24px
                color #ea5404
.slider_block
    float left
    width 100%
    height 320px
    background url("../../img/banner_img@2x.png") no-repeat center
    background-size 100%
    &:nth-child(2)
        width 100%
        height 320px
        background url("../../img/banner_img@2x.png") no-repeat center
        background-size 100%
    &:nth-child(3)
        width 100%
        height 320px
        background url("../../img/banner_img@2x.png") no-repeat center
        background-size 100%
    &:nth-child(4)
        width 100%
        height 320px
        background url("../../img/banner_img@2x.png") no-repeat center
        background-size 100%


.house_cells
    width 100%
    color #858585
    top 258px  
    position absolute  
