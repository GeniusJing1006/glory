.login_box
    position relative
    display flex
    height 95px
    margin-top 10px
    padding 0 15px
    background #fff

    .login_img
        position absolute
        top 50%
        left 15px
        width 64px
        height 64px
        margin-top -32px
        border-radius 50%
        background url("../../img/log in_user-head@2x.png") no-repeat center
        background-size cover
    .logged_img
        &:after
            content ''
            position absolute
            bottom 0
            right 0px
            margin-top -15px
            display block
            width 16px
            height 30px
            background url("../../img/log-in_member_icon@2x.png") no-repeat right center
            background-size 18px

    .login_con
        flex:1
        padding-left 80px
        line-height 80px
        div
            position relative
            font-size 17px
            .logged_edit
                position absolute
                font-size 13px
                color #646464
                height 20px
                line-height 20px
                bottom 10px
                left 0
                &:after
                    content ''
                    position absolute
                    bottom -4px
                    right -21px
                    margin-top -15px
                    display block
                    width 16px
                    height 30px
                    background url("../../img/log-in_edit_icon@2x.png") no-repeat right center
                    background-size 12px
    &:after
        content ''
        position absolute
        top 50%
        right 15px
        display block
        margin-top -18px
        width 20px
        height 36px
        background url("../../img/log in_right_icon@2x.png") no-repeat right center
        background-size 50%

